<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    tools:context="org.jbpm.mobileclient.processView.ProcessDefViewActivity"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:rowCount="1"
        android:columnCount="2"
        android:id="@+id/headGrid">

        <TextView
            android:layout_width="331dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/details"
            android:id="@+id/detailsText" />

        <Button
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="@string/closeButton"
            android:id="@+id/closeButton"
            android:layout_gravity="right"
            android:layout_row="0"
            android:layout_column="1" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.96"
        android:rowCount="6"
        android:columnCount="2"
        android:id="@+id/gridData">

        <TextView
            android:layout_width="73dp"
            android:layout_height="88dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/userId"
            android:id="@+id/userId"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="197dp"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/example"
            android:id="@+id/username"
            android:layout_gravity="left|center" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="84dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/definition_Id"
            android:id="@+id/definitionId"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="197dp"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/example"
            android:id="@+id/getId"
            android:lines="2"
            android:maxLines="2"
            android:layout_gravity="center|left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/definitionName"
            android:id="@+id/definitionNameId"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="199dp"
            android:layout_height="72dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/example"
            android:lines="2"
            android:maxLines="2"
            android:id="@+id/definitionName"
            android:layout_gravity="center|left" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="74dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Deployment"
            android:id="@+id/DeploymentId"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="201dp"
            android:layout_height="73dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/example"
            android:lines="2"
            android:maxLines="2"
            android:id="@+id/getDepolyment"
            android:layout_gravity="center|left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Process_Variables"
            android:id="@+id/processVariablesId"
            android:layout_gravity="right|center" />

        <ListView
            android:layout_width="197dp"
            android:layout_height="146dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/example"
            android:lines="2"
            android:maxLines="2"
            android:id="@+id/processVariables"
            android:layout_gravity="center|left"
            android:dividerHeight="2dp"/>

    </GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_instance"
        android:id="@+id/ButtonInsStart" />

</LinearLayout>
