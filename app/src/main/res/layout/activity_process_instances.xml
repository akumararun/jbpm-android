<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.jbpm.mobileclient.processView.ProcessInsActivity"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_gravity="center_horizontal"
        android:rowCount="1"
        android:columnCount="3"
        android:id="@+id/gridLayout2" >

        <TextView
            android:layout_width="298dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/processInsatances"
            android:id="@+id/textView2"
            android:layout_columnSpan="2"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/closeButton"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:text="@string/closeButton"
            android:layout_gravity="right" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:rowCount="1"
        android:columnCount="2"
        android:id="@+id/usergrid" >

        <TextView
            android:id="@+id/usernameId"
            android:layout_width="171dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/userNameId"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/usernameIns"
            android:layout_width="180dp"
            android:layout_height="79dp"
            android:layout_column="1"
            android:layout_row="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="left"
            android:text="@string/example" />
    </GridLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/android:list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:dividerHeight="2dp"/>

    </LinearLayout>

</LinearLayout>
